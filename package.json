{
  "name": "sfdx-mobile",
  "description": "Plugin for sfdx lwc deployment to mobile platforms",
  "version": "0.1.0",
  "author": "Raj Rao @trooper2013",
  "bugs": "https://github.com/forcedotcom/lwc-dev-mobile/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@salesforce/command": "^1.4.1",
    "@salesforce/core": "^1.3.2",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "1.4.1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "chai": "^4",
    "env-var": "^5.2.0",
    "globby": "^8",
    "mocha": "^5",
    "nyc": "^14",
    "shelljs": "^0.8.3",
    "ts-node": "^8",
    "tslint": "^5"
  },
  "engines": {
    "node": ">=8.0.0"
  },
   "files": [
         "/bin",
         "/dist",
         "/modules",
         "/virtual-modules",
         "/script",
         "/messages",
         "/oclif.manifest.json",
         "!**/__tests__/",
         "!**/__mocks__/",
         "!**/.DS_Store"
  ],
  "homepage": "https://github.com/forcedotcom/lwc-dev-mobile",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "topics": {
      "hello": {
        "description": "Commands to say hello."
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "https://github.com/forcedotcom/lwc-dev-mobile",
  "scripts": {
    "clean": "yarn rimraf dist reports coverage errorShots oclif.manifest.json",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "tslint -p test -t stylish",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
