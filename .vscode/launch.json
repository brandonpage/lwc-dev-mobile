{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Sfdx Preview iOS",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:local:preview",
                "-p",
                "iOS",
                "-d",
                "c/HelloWorld",
                "-t",
                "sfdxdebug"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sfdx Setup iOS",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:local:setup",
                "-p",
                "iOS"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Sfdx Setup Android",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:local:setup",
                "-p",
                "android"
            ]
        },
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "args": ["--runInBand"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/node_modules/jest/bin/jest"
        }
    ]
}
